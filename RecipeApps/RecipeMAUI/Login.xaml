<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipeMAUI.Login"
             Title="Login">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Entry">
                <Setter Property="MinimumWidthRequest" Value="200"/>

            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <Label 
            Text="Login"
            Margin="10"
            FontSize="Header"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label x:Name="MessageLbl" FontSize="Medium" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>
        <Border Padding="10">
            <Grid ColumnDefinitions="auto, auto" RowDefinitions="auto, auto, auto, auto" ColumnSpacing="10" RowSpacing="10" HorizontalOptions="Center">
                <Label Text="User Name" Grid.Row="1" Grid.Column="0"/>
                <Entry x:Name="UserNameTxt" Grid.Row="1" Grid.Column="1" Text="appadmin"/>
                <Label Text="Password" Grid.Row="2" Grid.Column="0" />
                <Entry x:Name="PasswordTxt" IsPassword="True" Grid.Row="2" Grid.Column="1" Text="Password@2025"/>
                <Button x:Name="LoginBtn" Text="Login" Grid.Row="3" Grid.Column="0" Clicked="LoginBtn_Clicked"/>
                <Button x:Name="CancelBtn" Text="Cancel" Grid.Row="3" Grid.Column="1" Clicked="CancelBtn_Clicked"
               
                    />
            </Grid>
        </Border>
    </VerticalStackLayout>
</ContentPage>