<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipeMAUI.RecipeSearch"
             Title="Recipe Search">
    <Grid ColumnDefinitions="Auto" RowDefinitions="Auto,*" HorizontalOptions="Center" RowSpacing="10" ColumnSpacing="10">
        <Button x:Name="NewBtn" Text="New" Grid.Column="0" Grid.Row="0" WidthRequest="100" HorizontalOptions="Start"/>
        <ListView Grid.Row="1" Grid.Column="0" WidthRequest="600" Grid.ColumnSpan="1" x:Name="LstRecipes" HorizontalOptions="Center">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid RowDefinitions="auto" ColumnDefinitions="50,*, * " ColumnSpacing="10">
                        <Image Grid.Column="0" HeightRequest="75" Source="{Binding Path=[RecipePic], StringFormat='{0}'}"/>
                        <Label Grid.Column="1" Text="{Binding Path=[RecipeName]}" VerticalOptions="Center"/>
                        <Label Grid.Column="3" Text="{Binding Path=[RecipeStatus]}" VerticalOptions="Center"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>


</ContentPage>